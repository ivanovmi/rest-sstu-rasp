dict = {}

odd = a.index('Нечётная')
non_odd = a.index('Чётная')
#p odd <=> non_odd
#pp a[odd+1..a.length-1]
if odd > non_odd
  non_odd_week=a[1..odd-1]
  odd_week=a[odd+1..a.length-1]
elsif non_odd > odd
    odd_week=a[1..non_odd-1]
    non_odd_week=a[non_odd+1..a.length-1]
end

dict['odd']=odd_week
dict['non_odd']=non_odd_week
week = {1 => 'monday', 2 => 'tuesday', 3 => 'wednesday', 4 => 'thursday', 5 => 'friday', 6 => 'saturday'}
dict.each do |k,v|
  i = 0
  while i < v.length-1
    pp 'iter: '+i.to_s
    pp 'day: '+v[i]
    pp 'num: '+v[i+1]
    pp 'aud: '+v[i+2]
    pp 'gr: '+v[i+3]
    pp 'lec: '+v[i+4]
    i += 4
  end
  pp '===================================================================='
end
